extends layout

block content

	.container(ng-app='alko' ng-controller='MainController' ng-init='init()')
		.row
			.col-md-6.col-md-offset-3
				form(role='form').search-form
					.form-group

						.input-group
							.input-group-btn
								select.btn.btn-success.dropdown-toggle(ng-model='typeFilter' ng-options='type for type in availableTypes')
									option(value='') Valitse tyyppi:
										span.caret
									option(value='all') Kaikki
							input(id='search', ng-model='filterText' type='text', placeholder='Hae').form-control

		.row
			.col-md-12
				table#results-table.table.table-striped
					thead
						tr
							th(ng-click='orderByField="Nimi"; reverseSort = !reverseSort') Nimi:
							th(ng-click='orderByField="Tyyppi"; reverseSort = !reverseSort') Tyyppi:
							th(ng-click='orderByField="Hinta"; reverseSort = !reverseSort') Hinta:
							th(ng-click='orderByField="Alkoholi"; reverseSort = !reverseSort') Alkoholi-%
					tbody#results
						tr(ng-click='openModal(product)', ng-repeat='product in products | filter: filterText | isType: typeFilter | orderBy: orderByField:reverseSort')
							td {{product.Nimi}}
							td {{product.Tyyppi}}
							td {{product.Hinta}} â‚¬
							td {{product.Alkoholi}} %